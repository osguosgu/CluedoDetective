<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
		 <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >
	            
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="@string/player_prompt"
		            android:textAppearance="?android:attr/textAppearanceMedium" />/>
		        
				<Spinner
				    android:id="@+id/player_spinner"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:prompt="@string/player_prompt"
				    android:spinnerMode="dialog" />

		</LinearLayout>
		<Spinner
	        android:id="@+id/suspect_spinner"
	        android:spinnerMode="dialog"
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:entries="@array/character_array" 
	        android:prompt="@string/suspect_prompt" 
			android:hint="@string/suspect_prompt"/>
	    <Spinner
	        android:id="@+id/weapon_spinner"
	        android:spinnerMode="dialog"
	         android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:entries="@array/weapon_array" 
	        android:prompt="@string/weapon_prompt" />

	    <Spinner
	        android:id="@+id/room_spinner"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:entries="@array/room_array"
	        android:prompt="@string/room_prompt"
	        android:spinnerMode="dialog" />
	    
		<Button
		    android:id="@+id/print_button"
		    android:layout_width="match_parent"
		    android:layout_height="176dp"
		    android:onClick="submitSuspection"
		    android:text="@string/hit"
		    android:textSize="100dp" >
</Button>
</LinearLayout>
